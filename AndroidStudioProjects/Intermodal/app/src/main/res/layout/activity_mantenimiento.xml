<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.indatcom.intermodal.Mantenimiento">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:inputType="number"
        android:id="@+id/etIDEquipo"
        android:hint="ID de equipo"
        android:layout_weight="1" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/etTipo"
        android:hint="Tipo"
        android:layout_weight="1" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etIDUsuario"
        android:hint="ID de usuario"
        android:layout_weight="1" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etNombre"
        android:hint="Nombre"
        android:layout_weight="1" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:inputType="date"
        android:id="@+id/etFecha"
        android:hint="Fecha"
        android:layout_weight="1" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/etHoraInicio"
        android:layout_weight="1"
        android:hint="Hora de inicio" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/etHoraTermino"
        android:layout_weight="1"
        android:hint="Hora de termino" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/etIncidencias"
        android:layout_weight="1"
        android:hint="Incidencias" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Buscar"
        android:id="@+id/btnBuscar"
        android:layout_weight="1" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Agregar"
        android:id="@+id/btnAgregar"
        android:layout_weight="1" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Modificar"
        android:id="@+id/btnModificar"
        android:layout_weight="1" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Eliminar"
        android:id="@+id/btnEliminar"
        android:layout_weight="1" />

</LinearLayout>
